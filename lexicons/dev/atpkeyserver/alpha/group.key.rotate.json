{
  "lexicon": 1,
  "id": "dev.atpkeyserver.alpha.group.key.rotate",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Rotate a group's symmetric key, marking the current version as revoked.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["group_id"],
          "properties": {
            "group_id": {
              "type": "string",
              "description": "Group identifier"
            },
            "reason": {
              "type": "string",
              "description": "Reason for rotation (e.g., suspected_compromise, routine_rotation, user_requested)",
              "default": "user_requested"
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "ref",
          "ref": "dev.atpkeyserver.alpha.defs#rotationResult"
        }
      }
    }
  }
}
